<l-form name="content" is-submit-validate="{{isSubmitValidate}}" l-form-btn-class="l-form-btn-class"
  bind:linsubmit="submit">
  <l-form-item label="区域" name="dept" l-form-label-class="l-form-label-class" rules="{{requiredRules}}">
   <view class="selectContent"><select wx:if="{{areaList.length>0}}" class="select" id="select" data-index="1" options="{{areaList}}" key="LOOKUP_CODE" text="LOOKUP_CODE"
          bind:change="areaChange" ></select></view> 
  </l-form-item>
  <l-form-item label="具体位置:" name="ROOM_NO" l-form-label-class="l-form-label-class" rules="{{requiredRules}}">
    <l-input id="dept" value="{{formData.ROOM_NO}}" label-width="170" hide-label show-row="{{false}}"
    bind:lininput="roomNoKeyIn" l-input-class="l-input-class"/>
  </l-form-item>
  <l-form-item label="类别:" name="BX_TYPE" l-form-label-class="l-form-label-class" rules="{{requiredRules}}">
      <l-radio-group  bind:linchange="radioChange" current="{{formData.BX_TYPE}}">
        <l-radio key="factory">维修类</l-radio>
        <l-radio wx:if="{{engineerFlag}}"  key="engineer">工程类</l-radio>
      </l-radio-group>
  </l-form-item>
  <l-form-item label="問題類型" name="TYPE" l-form-label-class="l-form-label-class" rules="{{requiredRules}}">
    <view class="selectContent"><select wx:if="{{currTypeList.length>0}}" class="select" id="select-content" data-index="1" options="{{currTypeList}}" key="LOOKUP_CODE" text="LOOKUP_CODE"
          bind:change="typeChange" ></select></view>
  </l-form-item>
  <l-form-item label="问题描述" name="SERVICE_DESC" l-form-label-class="l-form-label-class" rules="{{requiredRules}}">
    <l-input id="dept" value="{{formData.SERVICE_DESC}}" label-width="170" hide-label show-row="{{false}}"
    bind:lininput="serviceDescKeyIn" l-input-class="l-input-class"/>
  </l-form-item>
  <l-form-item label="附图" name="dept" l-form-label-class="l-form-label-class" >
    <l-image-picker clear="{{ isClear }}" l-class="image" bind:linchange="addImage"/>
  </l-form-item>
  <l-form-item label="需求人" name="dept" l-form-label-class="l-form-label-class" rules="{{requiredRules}}">
    <l-input id="dept" value="{{handler}}" label-width="170" hide-label show-row="{{false}}"
      disabled="true" l-input-class="l-input-class"/>
  </l-form-item>
  <l-form-item label="分机/手机" name="dept" l-form-label-class="l-form-label-class" rules="{{requiredRules}}">
    <l-input id="dept" value="{{formData.MOBILE}}" label-width="170" hide-label show-row="{{false}}"
      disabled="true" l-input-class="l-input-class"/>
  </l-form-item>
  <l-form-item label="希望完成时间" name="SERVICE_DATE" l-form-label-class="l-form-label-class" >
    <picker id="OUT_TIME" style="padding-left:26rpx;" mode="date" value="{{formData.SERVICE_DATE}}"
      bindchange="timeChange">
      <view style="width:100%"><text decode="{{true}}">&nbsp;{{formData.SERVICE_DATE}}</text> </view>
    </picker>
  </l-form-item>
  <l-form-item wx:if="{{ownerFlag}}" label="處理人" name="HANDLER" l-form-label-class="l-form-label-class" >
    <view class="selectContent">
      <select-empno wx:if="{{currentHandlerList.length>0}}" class="select" id="select-empno" data-index="1"
        options="{{currentHandlerList}}" key="DESCRIPTION" text="DESCRIPTION" bind:change="handlerChange">
      </select-empno>
    </view>
  </l-form-item>
</l-form> 

<view class="submit">
  <l-button bind:tap="submit" width="600" style="margin-top:30rpx" size="large">提交</l-button>
</view>